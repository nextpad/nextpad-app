generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Token {
  id          Int      @id @default(autoincrement())
  logo        String
  name        String
  symbol      String
  supply      String
  address     String
  blockchain  Int
  description String   @db.Text
  web         String?
  twitter     String?
  telegram    String?
  createdAt   DateTime @default(now())

  @@fulltext([address])
}

model TokenLocked {
  id          Int    @id @default(autoincrement())
  logo        String
  address     String
  name        String
  blockchain  Int
  totalAmount String @default("0")

  @@fulltext([address])
}

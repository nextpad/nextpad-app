generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Token {
  id          Int      @id @default(autoincrement())
  logo        String
  name        String
  symbol      String
  supply      String
  decimals    Int      @default(18)
  address     String
  blockchain  Int
  description String   @db.Text
  web         String?
  twitter     String?
  telegram    String?
  createdAt   DateTime @default(now())
}

model TokenLocked {
  id          Int    @id @default(autoincrement())
  logo        String
  address     String
  name        String
  blockchain  Int
  totalAmount String @default("0")
  value       Int    @default(0)
  symbol      String @default("NULL")
}

model Launchpad {
  id          Int    @id @default(autoincrement())
  poolAddress String
  projectName String
  description String
  banner      String
  logo        String
  price       String
  goals       String
  allocation  String
  blockchain  Int    @default(1)
  status      Int    @default(1)
  boostPoint  Int    @default(0)
}
